{
  "name": "timeline-maker",
  "version": "1.0.0",
  "description": "Timeline Word-like app (Electron + React + Vite). Ready-to-build project.",
  "main": "electron/main.js",
  "author": "Generated by Atlas",
  "private": true,
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "electron .",
    "build-frontend": "vite build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf dist .electron"
  },
  "build": {
    "appId": "com.timeline.maker",
    "productName": "Timeline Maker",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "jspdf": "^2.5.1",
    "docx": "^8.5.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.1",
    "wait-on": "^7.0.1",
    "rimraf": "^5.0.0"
  }
}